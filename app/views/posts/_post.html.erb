    <div class="post">

      <div class="post-header">
        <div class="icon">
          <img class="user-icon" src="https://st4.depositphotos.com/1000507/23792/v/950/depositphotos_237929948-stock-illustration-kids-lego-head-icon-isolated.jpg">
        </div>
        <div class="user-name"><b>Username</b></div>
      </div>

      <img class="post-picture" src="<%= post.url %>">

      <div class="post-likes">
        <div class="icon like-icon fa fa-heart fa-2x heart"></div>
        <div class="user-name"><b><%= post.likes %> likes</b></div>
      </div>

      <div class="post-footer">
        <div class="tag">
          <b>Username</b>
          <span>Here is some text to go along with this image</span>
        </div>
        <div class="date">Date and Time</div>
        <div class="comment">
          <b>User1</b>
          <span>This is where the first comment goes</span>
        </div>
        <div class="comment">
          <b>User2</b>
          <span>This is where the second comment goes</span>
        </div>
        <a href="">Load 3 more comments</a>
      </div>

      <div class="post-comment">Add a Comment...<a href="" class="post-button"><b>Post</b></a></div>
      
    </div>
